---
import Footer from "@components/Footer.astro";
import Header from "@components/Header.astro";
import Layout from "@layouts/Layout.astro";

interface NavItem {
    navigate: string;
    title: string;
}

interface FormField {
    label: string;
    type: "text" | "number" | "email" | "tel" | "url";
    placeholder: string;
}

const navItems: NavItem[] = [
    { navigate: "/", title: "Inicio" },
    { navigate: "/docs/about", title: "Documentación" },
];

const formFields: FormField[] = [
    { label: "Dirección", type: "text", placeholder: "CARRERA 43b#43-45" },
    { label: "Municipio", type: "text", placeholder: "ANTIOQUÍA" },
    { label: "Ciudad", type: "text", placeholder: "MEDELLÍN" },
    { label: "Código Zip", type: "text", placeholder: "05007" },
    { label: "Baños", type: "number", placeholder: "6" },
    { label: "Habitaciones", type: "number", placeholder: "6" },
    { label: "Metros cuadrados", type: "number", placeholder: "200" },
    { label: "Tamaño del lote", type: "number", placeholder: "400" },
    { label: "Año de construcción", type: "number", placeholder: "2024" },
    { label: "Categoría", type: "text", placeholder: "FAMILIAR" },
];
---

<Layout title="Panel">
    <div class="grid">
        <Header Navigate={navItems} />
        <aside class="page-leftbar">
            <div class="content">
                <div class="history-chat">
                    <p
                        class="message"
                        title="consult nknfklnmdkfmdlkfmdfdlmldfmdl,ñdf"
                    >
                        consult nknfklnmdkfmdlkfmdfdlmldfmdl,ñdf
                    </p>
                </div>
            </div>
        </aside>
        <main class="page-main">
            <div class="content">
                <form action="submit">
                    <h2>Anuncia tu propiedad</h2>
                    <p class="description">
                        Ingresa los detalles a continuación para averiguar el
                        valor de tu propiedad.
                    </p>
                    <div class="form-grid">
                        {
                            formFields.map((field) => (
                                <div class="form-field">
                                    <label for={field.label}>
                                        {field.label}
                                    </label>
                                    <input
                                        type={field.type}
                                        id={field.label}
                                        name={field.label}
                                        placeholder={field.placeholder}
                                        required
                                    />
                                </div>
                            ))
                        }
                    </div>
                    <button type="submit" class="btn-form">Consultar</button>
                </form>
            </div>
        </main>
        <Footer />
    </div>
</Layout>
<style is:global>
    html,
    body {
        height: 100%;
        overflow: hidden;
    }

    .grid {
        display: grid;
        grid-template-columns: 200px auto;
        grid-template-rows: 40px 1fr 30px;
        grid-template-areas:
            "header header"
            "leftbar main"
            "leftbar footer";
        min-height: 100vh;
        column-gap: 3px;
        row-gap: 2px;
    }

    .page-header {
        grid-area: header;
    }

    .page-leftbar {
        grid-area: leftbar;
        overflow-y: auto;
    }

    .page-main {
        grid-area: main;
        overflow: auto;
    }

    .page-footer {
        grid-area: footer;
    }

    .content {
        color: #242424;
        background: #242424;
        font-weight: 600;
        text-align: center;
        box-sizing: border-box;
        height: 100%;
        padding: 10px;
    }

    /* Media Queries */
    @media (max-width: 600px) {
        .grid {
            grid-template-columns: 1fr;
            grid-template-areas:
                "header"
                "main"
                "leftbar"
                "footer";
        }
    }

    @media (min-width: 601px) and (max-width: 992px) {
        .grid {
            grid-template-columns: 150px auto;
            grid-template-areas:
                "header header"
                "leftbar main"
                "footer footer";
        }
    }

    @media (min-width: 993px) {
        .grid {
            grid-template-columns: 200px auto;
        }
    }

    aside {
        overflow-x: hidden;
        overflow-y: auto;
    }
    .history-chat {
        display: flex;
        text-wrap: nowrap;
        font-size: small;
        font-family: Arial, Helvetica, sans-serif;
        text-align: left;
        color: white;
        background-color: rgb(78, 76, 76);
        padding: 10px;
        cursor: pointer;
        border-radius: 5px;
    }

    .history-chat:hover {
        opacity: 80%;
    }
    .message {
        overflow: hidden;
        white-space: nowrap;
        text-overflow: ellipsis;
    }
    h2 {
        font-size: 15px;
        color: white;
        text-transform: uppercase;
    }

    .page-main > .content {
        display: flex;
        place-content: center;
        padding: 100px;
    }

    .form-grid {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 20px;
        margin-top: 40px;
    }
    .form-field {
        display: flex;
        flex-direction: column;
    }

    label {
        text-align: start;
        font-size: 11px;
        text-transform: uppercase;
        margin-bottom: 4px;
    }

    input {
        height: 30px;
        padding: 0 5px;
        background: #cccaca;
        border: none;
        border-radius: 4px;
    }

    .description {
        font-style: italic;
        font-size: x-small;
        margin-top: 20px;
    }

    .btn-form {
        margin-top: 20px;
        padding: 8px 16px;
        background-color: #ff5722;
        color: white;
        border: none;
        border-radius: 4px;
        cursor: pointer;
        font-size: 12px;
        text-transform: uppercase;
        align-self: center;
    }

    .btn-form:hover {
        opacity: 0.8;
    }
    form {
        border: 1px solid white;
        padding: 10px;
        height: 500px;
    }
    p{
        color: white
    }
</style>
